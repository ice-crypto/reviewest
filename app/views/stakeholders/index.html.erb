<p id="notice"><%= notice %></p>

<h1>Stakeholders</h1>

<table>
  <thead>
    <tr>
      <th>Real name</th>
      <th>Name alias</th>
      <th>Birthday at</th>
      <th>From</th>
      <th>Height</th>
      <th>Introduce</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stakeholders.each do |stakeholder| %>
      <tr>
        <td><%= stakeholder.real_name %></td>
        <td><%= stakeholder.name_alias %></td>
        <td><%= stakeholder.birthday_at %></td>
        <td><%= stakeholder.from %></td>
        <td><%= stakeholder.height %></td>
        <td><%= stakeholder.introduce %></td>
        <td><%= stakeholder.images %></td>
        <td><%= link_to 'Show', stakeholder %></td>
        <td><%= link_to 'Edit', edit_stakeholder_path(stakeholder) %></td>
        <td><%= link_to 'Destroy', stakeholder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

