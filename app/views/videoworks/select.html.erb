<p id="notice"><%= notice %></p>

<section class="content">
  <h3>映画一覧</h3>
  <div class="content-body">
    <table class="table">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>上映日</th>
          <th>上映時間</th>
          <th>概要</th>
          <th>監督</th>
          <th>脚本</th>
          <th>キャスト</th>
          <th>レビュー</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @videoworks.each do |videowork| %>
            <tr>
              <td><%= videowork.title %></td>
              <td><%= videowork.screening_at %></td>
              <td><%= videowork.screening_on %></td>
              <td><%= videowork.summary %></td>
              <td><%= videowork.directors %></td>
              <td><%= videowork.screenplaies %></td>
              <td><%= videowork.casts %></td>
              <td><%= link_to 'この映画のレビューをかく', new_review_path(video:videowork.id)%></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'New Videowork', new_videowork_path %>
</section>

<br>
